<!DOCTYPE html>
<html>
<head>
	<title>React Universal Boilerplate</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
	<meta name="format-detection" content="telephone=no">
	<meta name="msapplication-tap-highlight" content="no">

	<style>
		:focus { outline: none; }
		body {
			font-family: "Avenir Next",Nunito,"Helvetica Neue",Helvetica,sans-serif;
			font-size: 14px;
			color: #888888;
			font-weight: 400;
			overflow: hidden;
		}
		#root {
			position: absolute;
			top: 0; right: 0; bottom: 0; left: 0;
			display: flex;
		}
		.touchable {
			cursor: pointer;
			user-select: none;
		}

		@font-face {
			font-family: Material Icons;
			src: url(/MaterialIcons.ttf) format('truetype');
		}

		@font-face {
			font-family: FontAwesome;
			src: url(/FontAwesome.ttf) format('truetype');
		}

		@font-face {
			font-family: Ionicons;
			src: url(/Ionicons.ttf) format('truetype');
		}

		<% if (typeof initialStyles !== 'undefined') { %><%-initialStyles%><% } %>
	</style>
</head>

<body>
	<div id="root"><% if (typeof initialHtml !== 'undefined') { %><%-initialHtml%><% } %></div>

	<%if (typeof htmlWebpackPlugin !== 'undefined' && htmlWebpackPlugin.options.useVendorChunks) { %>
  <script src="<%=htmlWebpackPlugin.options.publicPath%>vendor.cache.js"></script>
  <% } %>

  <% if (typeof serverSide !== 'undefined') { %>
  <script src="<%=publicPath%>vendor.cache.js"></script>
  <script src="<%=publicPath%>app.js"></script>
  <% } %>
</body>
</html>
